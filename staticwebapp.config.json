{
  "routes": [
    {
      "route": "/admin",
      "allowedRoles": ["authenticated"]
    },
    {
      "route": "/api/admin-*",
      "allowedRoles": ["authenticated"]
    },
    {
      "route": "/api/draw-winner",
      "allowedRoles": ["authenticated"]
    },
    {
      "route": "/api/notify-winner",
      "allowedRoles": ["authenticated"]
    },
    {
      "route": "/api/*",
      "allowedRoles": ["anonymous"]
    },
    {
      "route": "/.auth/login/github",
      "statusCode": 404
    },
    {
      "route": "/.auth/login/twitter",
      "statusCode": 404
    },
    {
      "route": "/*",
      "serve": "/index.html",
      "statusCode": 200
    }
  ],
  "responseOverrides": {
    "401": {
      "redirect": "/.auth/login/aad?post_login_redirect_uri=/admin",
      "statusCode": 302
    }
  },
  "navigationFallback": {
    "rewrite": "/index.html",
    "exclude": ["/api/*", "*.{css,js,svg,png,jpg,jpeg,gif,ico,json}"]
  },
  "globalHeaders": {
    "X-Content-Type-Options": "nosniff",
    "X-Frame-Options": "DENY",
    "Content-Security-Policy": "default-src 'self'; script-src 'self' 'unsafe-inline' https://*.googlesyndication.com https://*.google.com https://js.monitor.azure.com; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; connect-src 'self' https://*.googlesyndication.com https://*.google.com https://*.adtrafficquality.google https://*.applicationinsights.azure.com https://*.monitor.azure.com; frame-src https://*.doubleclick.net https://*.googlesyndication.com",
    "Referrer-Policy": "strict-origin-when-cross-origin"
  },
  "mimeTypes": {
    ".json": "application/json"
  }
}
